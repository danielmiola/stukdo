<%= simple_form_for(@task, html: { class: "form-signin" }) do |f| %>
	<%= f.error_notification %>

	<%= f.input :content, required: false, autofocus: true, label: false, placeholder: "Content", input_html: {class: "form_control"} %>

	<%= f.button :submit, "Save", class: "btn btn-primary btn-lg btn-block" %>
<% end %>
